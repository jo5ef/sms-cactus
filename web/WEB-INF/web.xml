<?xml version="1.0" encoding="ISO-8859-1"?>
<!DOCTYPE web-app 
	PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN" 
	"http://java.sun.com/dtd/web-app_2_3.dtd">
<web-app>
	<display-name>sms-cactus-web</display-name>
	<description>
		This is the server for the sms-cactus Android application.
	</description>

	<context-param>
		<param-name>dbDriver</param-name>
		<param-value>com.mysql.jdbc.Driver</param-value>
	</context-param>

	<context-param>
		<param-name>dbConnection</param-name>
		<param-value><![CDATA[jdbc:mysql://localhost/smscactus?useUnicode=yes&characterEncoding=utf8&autoReconnect=true]]></param-value>
	</context-param>

	<context-param>
		<param-name>dbUser</param-name>
		<param-value>smscactus</param-value>
	</context-param>

	<context-param>
		<param-name>dbPassword</param-name>
		<param-value>smscactus</param-value>
	</context-param>


	<servlet>
		<servlet-name>msg</servlet-name>
		<servlet-class>org.ocactus.sms.server.MsgServlet</servlet-class>
		<description />
	</servlet>
	
	<servlet>
		<servlet-name>c2dm</servlet-name>
		<servlet-class>org.ocactus.sms.server.C2DMServlet</servlet-class>
		<description />
	</servlet>

	<servlet-mapping>
		<servlet-name>msg</servlet-name>
		<url-pattern>/msg/*</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>c2dm</servlet-name>
		<url-pattern>/c2dm/*</url-pattern>
	</servlet-mapping>

	<security-constraint>
		<web-resource-collection>
			<web-resource-name>Entire Application</web-resource-name>
			<url-pattern>/*</url-pattern>
		</web-resource-collection>
		<auth-constraint>
			<role-name>smscactus</role-name>
		</auth-constraint>
	</security-constraint>
	<login-config>
		<auth-method>BASIC</auth-method>
		<realm-name>sms-cactus</realm-name>
	</login-config>
	<security-role>
		<description>
			The role that is required to log in to the Manager
			Application.
		</description>
		<role-name>smscactus</role-name>
	</security-role>
</web-app>